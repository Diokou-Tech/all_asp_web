@model LoginViewModel
@{
	ViewBag.Title= "Login Page";
}
<div class="row">
	<div class="col-6 offset-md-3 mx-auto">
		<div asp-validation-summary="ModelOnly"></div>
		<form action="" method="post">
			<div class="form-group">
				<label asp-for="Username"> Username or Email</label>
				<input type="text" class="form-control" asp-for="Username" placeholder="votre login" />
				<span class="text-warning" asp-validation-for="Username"></span>
			</div>
			<div class="form-group">
				<label asp-for="Password"> Username or Email</label>
				<input type="password" asp-for="Password" class="form-control" placeholder="Votre mot de passe" />
				<span class="text-warning" asp-validation-for="Password"></span>
			</div>
			<div class="form-group">
				<div class="form-check">
					<input type="checkbox" asp-for="Rememberme" class="form-check-input" />
					<label asp-for="Rememberme" class="form-check-label">  Se souvenir de Moi</label>
					<span class="text-warning" asp-validation-for="Rememberme"></span>
				</div>
			</div>
			<div class="form-group mt-4">
				<button type="submit" class="btn btn-sm btn-primary">Se connecter</button>
			</div>
		</form>
	</div>
</div>